<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
    <style>
        .sidebar {
            min-width: 256px;
            background-color: #ffffff;
            height: 100vh;
        }

        .sidebar .nav {
            display: flex;
            flex-direction: column;
            align-items: center; 
        }

        .sidebar a {
            color: #1f2937;
            display: flex;
            align-items: center;
            padding: 20px 50px;
            width: 100%;
        }

        .sidebar a:hover {
            background-color: #e5e7eb;
        }

        .sidebar a i {
            width: 30px;
        }

        .navbar .navbar-brand {
            margin-left: 70px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
        <a class="navbar-brand font-weight-bold text-dark" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Admin</a>
        <div class="ml-auto">
            <div class="dropdown">
                <img src="https://cellphones.com.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg" alt="User Avatar" class="rounded-circle" style="width: 2.25rem; height: 2.25rem; cursor: pointer;" id="userDropdown" data-toggle="dropdown">
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="#">
                        <i class="fas fa-user"></i> Profile
                    </a>
                    <a class="dropdown-item" href="@Url.Action("Logout", "Account", new { area = "Admin" })">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>
    <div class="d-flex">
        <aside class="sidebar border-right">
            <nav class="nav flex-column">
                <a class="nav-link active" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                    <i class="fas fa-home"></i>Dashboard
                </a>
                <a class="nav-link" href="@Url.Action("Index", "Books", new { area = "Admin" })">
                    <i class="fas fa-book"></i>Books
                </a>
                <a class="nav-link" href="@Url.Action("Index", "Genres", new { area = "Admin" })"><i class="fas fa-list"></i>Genres</a>
                <a class="nav-link" href="@Url.Action("Index", "Carts", new { area = "Admin" })"><i class="fas fa-cart-plus"></i>Carts</a> <!-- Thêm Cart -->
                <a class="nav-link" href="#"><i class="fas fa-box"></i>Orders</a>
                <a class="nav-link" href="@Url.Action("Index", "Users", new { area = "Admin" })"><i class="fas fa-users"></i>Users</a>
            </nav>
        </aside>

        <main class="flex-fill p-4">
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
