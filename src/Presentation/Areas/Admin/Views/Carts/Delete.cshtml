@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model Domain.Models.CartModel

@{
    ViewData["Title"] = "Delete Cart";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this cart?</h3>
<div>
    <h4>Cart for @Model.User.Username</h4>
    <p>Created On: @Model.CreatedOn</p>
    <p>Updated On: @Model.UpdatedOn</p>
    <p>Total Items: @Model.CartItems.Count</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </div>
</form>
