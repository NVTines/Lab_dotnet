@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model Domain.Models.GenreModel

@{
    ViewData["Title"] = "Genre Details";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="form-group">
        <label><strong>Genre Name</strong></label>
        <p>@Model.Name</p>
    </div>
    <div class="form-group">
        <label><strong>Genre Description</strong></label>
        <p>@Model.Description</p>
    </div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
</div>
