@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<Domain.Models.GenreModel>

@{
    ViewData["Title"] = "Manage Genres";
}

    <h1>@ViewData["Title"]</h1>
    <p>
    <a href="@Url.Action("Create")" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create New Genre</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.Name</td>
                    <td>@genre.Description</td>
                    <td>
                    <a href="@Url.Action("Details", new { id = genre.Id })" class="btn btn-info btn-sm"><i class="bi bi-info-circle"></i> Details</a>
                    <a href="@Url.Action("Edit", new { id = genre.Id })" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a href="@Url.Action("Delete", new { id = genre.Id })" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
