@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model Domain.Models.BookModel

@{
    ViewData["Title"] = "Book Details";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <h4 class="card-title text-primary mb-4">@Model.Title</h4>

        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Author</dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <dt class="col-sm-3 font-weight-bold">Available</dt>
            <dd class="col-sm-9">@(Model.Available ? "Yes" : "No")</dd>

            <dt class="col-sm-3 font-weight-bold">Publisher</dt>
            <dd class="col-sm-9">Model.Publisher</dd>

            <dt class="col-sm-3 font-weight-bold">Price</dt>
            <dd class="col-sm-9">@String.Format("{0:C}", Model.Price)</dd>

            <dt class="col-sm-3 font-weight-bold">Created On</dt>
            <dd class="col-sm-9">@Model.CreatedOn</dd>

            <dt class="col-sm-3 font-weight-bold">Is Active</dt>
            <dd class="col-sm-9"><input type="checkbox" @(Model.IsActive ? "checked" : "") disabled /></dd>

            <dt class="col-sm-3 font-weight-bold">Genre</dt>
            <dd class="col-sm-9">@(Model.Genre?.Description ?? "N/A")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary ml-2">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>
