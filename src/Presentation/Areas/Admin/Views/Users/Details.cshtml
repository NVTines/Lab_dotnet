@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model Domain.Models.UserModel

@{
    ViewData["Title"] = "User Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <h4 class="card-title text-primary mb-4">@Model.Username</h4>

        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 font-weight-bold">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3 font-weight-bold">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3 font-weight-bold">Active</dt>
            <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Username" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary ml-2">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>
