@model Domain.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="card-body p-5">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Username" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0">
                                <i class="fas fa-user"></i>
                            </span>
                            <input asp-for="Username" class="form-control border-left-0" placeholder="Enter your username" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control border-left-0" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 rounded-pill">Login</button>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <small class="text-muted">Don't have an account? <a href="/register" class="text-decoration-none">Sign up</a></small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
